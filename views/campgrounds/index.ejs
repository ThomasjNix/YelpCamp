<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the YelpCamp Page!</h1>
            <p>Here's some campgrounds.</p>
            <a class="btn btn-primary btn-lrg" href="/campgrounds/new">Add New Campground</a>
        </div>
    </header>

    <div class="row">
        <h3>Most Popular Sites</h3>
    </div>
    
    <div class="row">
        <% campGroundList.forEach(function(campground){ %>
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="<%= campground.imgUrl %>" class="img-responsive">
                    <h4 class="h4-bold"><%= campground.name %><h4>
                    <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
                
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>